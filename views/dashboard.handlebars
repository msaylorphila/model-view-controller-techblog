<button id="createNewBlog">Create new blog!</button>
<form class="d-none" id="newBlogForm">
  <div class="form-group">
    <label for="blogTitle"><h2>Title</h2></label>
    <input type="text" class="createBlog" id="blogTitleInput" />
  </div>
  <div class="form-group">
    <label for="blogContent"><h2>Content</h2></label>
    <textarea class="createBlog" id="blogContentInput" rows="3"></textarea>
  </div>
  <button id="submitBlog">Submit</button>
</form>
{{#if myBlogs.length}}
<div class="blog-list">
{{#each myBlogs as |myBlog|}}
  <div class="card mb-3">
    <div class="card-body">
      <button id="update-id" updateId="{{myBlog.id}}" class="update-blog">Update Blog</button>
      <button class="delete-blog" delete-id="{{myBlog.id}}">Delete Blog</button>
      <h5 class="card-title">{{myBlog.title}}</h5>
      <div class="card-title">Created by:
        {{myBlog.user.username}}
        on:
        {{format_date myBlog.createdAt}}</div>
      <p class="card-text">{{myBlog.contents}}</p>
      {{#each myBlog.comments}}
        <div class="card-body">
          <div class="card-title">Created by:
            {{user.username}}
            on:
            {{format_date createdAt}}</div>
          <p class="card-text">{{contents}}</p>
        </div>
      {{/each}}
            <form class="d-none" id="update-blog-form-{{myBlog.id}}">
            <div class="form-group">
                <label for="blogTitle"><h2>Update Title</h2></label>
                <input type="text" class="updateBlogTitleInput" id="blogTitleUpdate-{{myBlog.id}}" />
            </div>
            <div class="form-group">
                <label for="blogContent"><h2>Update Content</h2></label>
                <textarea class="updateBlogConentInput" id="blogContentUpdate-{{myBlog.id}}" rows="3"></textarea>
            </div>
            <button updateId="{{myBlog.id}}" id="submit-updated-blog">Submit</button>
            </form>
    </div>
  </div>
{{/each}}
{{/if}}
</div>

<script src="./js/dashboard.js"></script>